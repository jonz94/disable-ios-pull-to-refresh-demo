---
import '../styles/global.css'

/**
 * create an array from 1 to 100
 *
 * credits: https://stackoverflow.com/a/33352604/9979122
 */
const items = Array.from({ length: 100 }, (_, index) => index + 1)
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="color-scheme" content="light dark" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Disable iOS Pull to Refresh</title>
  </head>
  <body class="overflow-hidden">
    <main
      class="flex max-h-screen flex-col gap-4 overflow-auto p-4 supports-[height:-webkit-fill-available]:max-h-[-webkit-fill-available] supports-[height:100dvh]:max-h-dvh"
    >
      <h1>Disable iOS Pull to Refresh Behavior</h1>

      <ul>
        {items.map((i) => <li>Item {i}</li>)}
      </ul>
    </main>
  </body>
</html>
